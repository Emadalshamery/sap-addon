{
  "manifest_version": 2,
  "name": "SAP Addon",
  "version": "1.12",
  "description": "Extension for SAP related webpages: Portal, GitHub, Fiori Launchpad",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://portal.wdf.sap.corp/*"
      ],
      "js": ["sap-addon-portal.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://github.wdf.sap.corp/*",
        "*://github.tools.sap/*"
      ],
      "js": ["sap-addon-github.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://fiorilaunchpad.sap.com/sap/fiori/lunchmenu/*",
    "*://people.wdf.sap.corp/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "SAP Addon",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://nikolockenvitz.github.io/sap-addon/updates.json"
    }
  }
}